{
  "compilerOptions": {
    "allowJs": false,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "rootDirs": [
      "src",
      "test"
    ],
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es2017",
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}
